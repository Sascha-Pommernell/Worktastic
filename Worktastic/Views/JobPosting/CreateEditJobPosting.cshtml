@model Worktastic.Models.JobPosting

@{
    ViewData["Title"] = "Erstellen oder Bearbeiten";
}

<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">

    <div class="card">
        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>
        <div class="card-body">

            <input hidden asp-for="Id" />

            <div class="row form-group mb-3">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Jobbezeichnung" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Einsatzort" />
                </div>
            </div>

            <div class="row form-group mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="Description" placeholder="Beschreibung"></textarea>
                </div>
            </div>
            
            <div class="row form-group mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="Tasks" placeholder="Aufgaben"></textarea>
                </div>
            </div>
            
            <div class="row form-group mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="EmployeeProfile" placeholder="Mitarbeiterprofil"></textarea>
                </div>
            </div>
            
            <div class="row form-group mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="Benefits" placeholder="Benefits"></textarea>
                </div>
            </div>
            <div class="row form-group mb-3">
                <div class="col-6">
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Jahresgehalt" />
                </div>
            </div>

            <div class="row form-group mb-3">
                <div class="col-3">
                    <div class="col-form-label">
                        Eintrittsdatum
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>

            <hr />

            <div class="row form-group mb-3">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Firmenname" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Website" />
                </div>
            </div>

            <div class="row form-group mb-3">
                <div class="col">
                    <input class="form-control" asp-for="ConntactPerson" type="tel" placeholder="Ansprechpartner/in" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Telefonnummer"/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="E-Mail-Adresse"/>
                </div>
            </div>

            <div class="row form-group mb-3">  
                <div class="col">
                    <label>Bild</label>
                    <input class="form-control-file" name="file" type="file" />
                </div>
            </div>

        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>

</form>